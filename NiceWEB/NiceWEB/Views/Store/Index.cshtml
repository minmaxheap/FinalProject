@model IEnumerable<NiceWEB.Models.StoreProperty>
@using NiceWEB.Html
@using NiceWEB.Models

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/_Layout.cshtml";
}



<div style="display:none;" class="row">
	<div class="form-group">

	</div>
</div>

<!-- Content Header (Page header) -->
<div class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1 class="m-0">창고 재고 조회 </h1>
			</div><!-- /.col -->
			<div class="col-sm-6">
				
			</div><!-- /.col -->
		</div><!-- /.row -->
	</div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<hr />
<div class="content">
	<div class="container-fluid">
		@using (Html.BeginForm("Index", "Store", FormMethod.Post, new { @id = "form7" }))
		{
			<div class="row">
				<div class="col-md-12">
					<div class="row">
				
						<div class="col-4">
							<div class="form-group">

								<label>창고:</label>

								@Html.DropDownList("storeCode",
							(IEnumerable<SelectListItem>)ViewBag.Categories, null, new { @class = "form-control" })
							</div>
						</div>
						<div class="col-4">
							<div class="form-group">
								<label>자재품번:</label>
								@Html.DropDownList("ProductCode",
											   (IEnumerable<SelectListItem>)ViewBag.Categories2, null, new { @class = "form-control" })

							</div>
						</div>

						<div class="col-4">
							<div class="form-group">
								<label>&nbsp;  </label>
								<button type="submit" class="btn btn-block btn-secondary">조회</button>

							</div>
						</div>

					</div>
				</div>
			</div>
		}
		<div class="row">
			<div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">창고 재고</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        @*<table id="compareplan" class="table table-bordered table-striped">
            </table>*@
                        <table class="table table-striped table-bordered table-hover"
                               id="TableId"
                               cellspacing="0"
                               align="center"
                               width="100%" border="1">

                            <thead>
                                <tr>
                                    <th style="text-align:center" scope="col">창고입고시간</th>
                                    <th style="text-align:center" scope="col">LotID</th>
                                    <th style="text-align:center" scope="col">품번</th>
                                    <th style="text-align:center" scope="col">창고</th>
                                    <th style="text-align:center" scope="col">수량</th>
                                </tr>
                            </thead>
							<tbody>
								@if (Model != null)
								{
									foreach (var p in Model)
									{

										<tr>
											<td style="text-align:center" >@p.OPER_IN_TIME</td>
											<td style="text-align:center" >@p.LOT_ID</td>
											<td style="text-align:center" >@p.PRODUCT_CODE</td>
											<td style="text-align:center" >@p.STORE_CODE</td>
											<td align="right">@String.Format("{0:#,###}", Math.Round(p.LOT_QTY))</td>

										</tr>
									}
								}
								</tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
           
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center">
                                @Html.PageLinks((PagingInfo)ViewBag.PagingInfo, (x) => Url.Action("Index",
                                    new { page = x, storeCode = ViewBag.storeCode, ProductCode = ViewBag.ProductCode }))
                            </ul>
                        </nav>
               
                </div>
				<!-- /.card -->
			</div>
			<!-- /.col -->
		</div>


	
	</div>

	
</div>





